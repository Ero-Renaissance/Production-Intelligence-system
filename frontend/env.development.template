# Development Environment Configuration Template
# Copy this file to one of the following for local development:
# - .env.local (recommended, git-ignored)
# - .env.development (Vite mode-specific)
# Production Intelligence System

# API Configuration
VITE_API_BASE_URL=/api

# Mock Data / MSW Configuration
# Use MSW (mock service worker) in dev
VITE_USE_MSW=true
# Allow MSW in preview (non-dev) builds (leave false unless needed)
VITE_PREVIEW_MSW=false
# (Legacy) If present in older code, ignored by current setup
# VITE_USE_MOCK_DATA=true
VITE_MOCK_WEBSOCKET_ENABLED=true
VITE_MOCK_DELAY_MS=300

# Development Features
VITE_DEBUG_MODE=true
VITE_SHOW_PERFORMANCE_METRICS=true

# Security (Development Only - DO NOT USE IN PRODUCTION)
VITE_DISABLE_AUTH=true
VITE_MOCK_USER_ROLE=operator

# Analytics (Development)
VITE_ANALYTICS_ENABLED=false

# Feature Flags
VITE_FEATURE_OPTIMIZATION_AI=true
VITE_FEATURE_CARGO_FORECAST=true
VITE_FEATURE_REAL_TIME_UPDATES=true 